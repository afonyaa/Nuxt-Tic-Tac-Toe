generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Game {
  id    String     @id @default(cuid())
  status  GameStatus
  players User[] @relation("games")
  winner User @relation(fields: [winnerId], references: [id])
  winnerId String
  field Json?
}

model User {
  id    String     @id @default(cuid())
  login String
  rating Int
  passwordHash String
  games Game[] @relation("games") 
  winnerGames Game[]
}

enum GameStatus {
  GameIdle
  GameInProgress
  GameOver
  GameOverDraw  
}